---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		tag?: string;
	};
}

const {
	content: { title, description, pubDate, updatedDate, tag },
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<main>
			<div class="wrapper">
				<article>
					<h1 class="title">{title}</h1>
					{pubDate && <time>{pubDate}</time>}
					{
						updatedDate && (
							<div>
								Last updated on <time>{updatedDate}</time>
							</div>
						)
					}
					<slot />
				</article>
			</div>
		</main>
		<Footer />
	</body>
</html>
<style>
	.title {
		font-size: 2em;
		margin: 0.25em 0 0;
	}
</style>
